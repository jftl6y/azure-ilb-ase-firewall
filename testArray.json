{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "azfwSubnetAddressRange":{
            "type":"string",
            "metadata": {
                "description": "Address range that will be used by the Azure Firewall Subnet"
            },
            "defaultValue": "10.10.1.0/24"
        }
    },
    "variables": {
        "azFwPrivateIpArray":"[split(parameters('azfwSubnetAddressRange'),'.')]",
        "azFwPrivateIp":"[concat(variables('azFwPrivateIpArray')[0],'.',variables('azFwPrivateIpArray')[1],'.',variables('azFwPrivateIpArray')[2],'.4')]"

    },
    "resources": [],
    "outputs": {
        "AzureFWIP":{
            "type":"string",
            "value":"[variables('azFwPrivateIp')]"
        }
    }
}

        