                        "properties": {
                            "description": "Used to manage ASE from public VIP",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "454-455",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 100,
                            "direction": "Inbound",
                            "sourcePortRanges": [],
                            "destinationPortRanges": [],
                            "sourceAddressPrefixes": [
                                "70.37.57.58",
                                "157.55.208.185",
                                "52.174.22.21",
                                "13.94.149.179",
                                "13.94.143.126",
                                "13.94.141.115",
                                "52.178.195.197",
                                "52.178.190.65",
                                "52.178.184.149",
                                "52.178.177.147",
                                "13.75.127.117",
                                "40.83.125.161",
                                "40.83.121.56",
                                "40.83.120.64",
                                "52.187.56.50",
                                "52.187.63.37",
                                "52.187.59.251",
                                "52.187.63.19",
                                "52.165.158.140",
                                "52.165.152.214",
                                "52.165.154.193",
                                "52.165.153.122",
                                "104.44.129.255",
                                "104.44.134.255",
                                "104.44.129.243",
                                "104.44.129.141",
                                "23.102.188.65",
                                "191.236.154.88",
                                "13.64.115.203",
                                "65.52.193.203",
                                "70.37.89.222",
                                "52.224.105.172",
                                "23.102.135.246",
                                "52.225.177.153",
                                "65.52.172.237",
                                "52.151.25.45",
                                "40.124.47.188"
                                                           ],
                            "destinationAddressPrefixes": []
                        }
                    },
                    {
                        "name": "ASE-internal-inbound",
                        "properties": {
                            "description": "ASE-internal-inbound",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "192.168.250.0/24",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 110,
                            "direction": "Inbound",
                            "sourcePortRanges": [],
                            "destinationPortRanges": [],
                            "sourceAddressPrefixes": [],
                            "destinationAddressPrefixes": []
                        }
                    },
                    {
                        "name": "Inbound-HTTP",
                        "properties": {
                            "description": "Allow HTTP",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "80",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 120,
                            "direction": "Inbound",
                            "sourcePortRanges": [],
