                        }
                    },
                    {
                        "name": "ASE-to-VNET",
                        "properties": {
                            "description": "ASE to VNET",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "192.168.250.0/23",
                            "access": "Allow",
                            "priority": 180,
                            "direction": "Outbound",
                            "sourcePortRanges": [],
                            "destinationPortRanges": [],
                            "sourceAddressPrefixes": [],
                            "destinationAddressPrefixes": []
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2015-06-15",
            "type": "Microsoft.Network/routeTables",
            "name": "[variables('subnetRouteTableName')]",
            "location": "[parameters('location')]",
            "tags": {
                "displayName": "Deploy UDR (Conditional)"
            },
            "properties": {
                "routes": [
                    {
                        "name": "ase-route",
                        "properties": {
                            "addressPrefix": "0.0.0.0/0",
                            "nextHopType": "Internet"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2017-06-01",
            "type": "Microsoft.Network/virtualNetworks",
            "condition": "[equals(parameters('rebuildVNET'),'Yes')]",
            "name": "[parameters('vnetResourceName')]",
            "location": "[parameters('location')]",
            "tags": {
                "displayName": "Deploy VNet - with UDR"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetAddressRange')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('aseSubnetAddressRange')]",
                            "networkSecurityGroup": {
                                "id": "[variables('nsgId')]"
                            },
                            "routeTable":{
                                "id": "[resourceId('Microsoft.Network/routeTables', variables('subnetRouteTableName'))]"
                            },
                            "serviceEndpoints": [
                                {
                                    "service": "Microsoft.Storage"
                                },
                                {
                                    "service": "Microsoft.Sql"
                                }
                            ]
                        }
                    }
                ]
            },
            "dependsOn": [
                "[variables('nsgId')]",
                "[resourceId('Microsoft.Network/routeTables', variables('subnetRouteTableName'))]"
            ]
        }
    ],
    "outputs": {}
}