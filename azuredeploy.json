{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "East US",
            "allowedValues": [
                "Central US",
                "East US 2",
                "West US",
                "North Central US",
                "South Central US",
                "West Central US",
                "West US 2"
            ],
            "metadata": {
                "description": "Location for all resources"
            }
        },
        "aseName": {
            "type": "string",
            "defaultValue": "[concat('ASE', uniqueString(resourceGroup().id))]",
            "metadata": {
                "description": "Name of the ASE resource"
            }
        },
        "vnetResourceGroupName": {
            "type": "string",
            "metadata": {
                "description": "The resource group name that contains the vnet"
            }
        },
        "vnetResourceName": {
            "type": "string",
            "metadata": {
                "description": "The name of the vnet"
            }
        },
        "vnetAddressRange": {
            "type": "string",
            "metadata": {
                "description": "Address range of the virtual network"
            }
        },
        "aseSubnetName": {
            "type": "string",
            "defaultValue": "ase-subnet",
            "metadata": {
                "description": "Subnet name which will contain the App Service Environment"
            }
        },
        "aseSubnetAddressRange": {
            "type": "string",
            "metadata": {
                "description": "Address range which will be used by the App Service Environment"
            }
        },
        "azfwSubnetAddressRange":{
            "type":"string",
            "metadata": {
                "description": "Address range which will be used by the Azure Firewall"
            }
        },
        "sqlManagedInstanceName":{
            "type":"string",
            "metadata": {
                "description": "Name of the Azure SQL Managed Instance - must be unique, contain only lowercase letters, numbers and '-'"
            }
        },
        "sqlManagedInstanceAdminLogin":{
            "type": "string",
            "metadata": {"description":"Admin user for Managed Instance"}                
        },
        "sqlManagedInstancePassword":{
            "type": "securestring",
            "metadata": {"description":"Admin user password - must be 16-128 characters, must contain 3 of uppercase, lowercase, numbers and non-alphanumeric characters, and cannot contain all or part of the login name"}      
        },
        "sqlManagedInstance-subnet":{
            "type":"string",
            "metadata":{"description" : "Subnet name which will contain Azure Managed Instance"},
            "defaultValue": "mi-subnet"
        },
        "sqlManagedInstanceSubnetAddressRange":{
            "type":"string",
            "metadata": {"description": "Address range which will be used by the Azure SQL Managed Instance"}
        },        
        "sqlManagedInstance-storageSizeInGB":{
            "type":"string",
            "metadata": {"description": "Amount of Storage in GB for this instance"},
            "defaultValue": "256"
        },
        "sqlManagedInstance-vCores":{
            "type":"string",
            "metadata": {"description": "Number of vCores for this instance"},
            "defaultValue": "8"
        },
        "sqlManagedInstance-licenseType":{
            "type":"string",
            "metadata": {"description": "Type of license basic or standard"},
            "defaultValue": "BasePrice",
            "allowedValues": [
                "BasePrice",
                "StandardPrice"
            ]
        },
        "sqlManagedInstance-hardwareFamily":{
            "type":"string",
            "metadata": {"description": "Hardware family (Gen4, Gen5)"},
            "defaultValue": "Gen5",
            "allowedValues": ["Gen4","Gen5"]
        },
        "sqlManagedInstance-collation":{
            "type":"string",
            "metadata": {"description": "SQL Collation"},
            "defaultValue": "SQL_Latin1_General_CP1_CI_AS"
        },
        "sqlManagedInstance-publicDataEndpointEnabled":{
            "type":"bool",
            "metadata": {"description": "Public Endpoint enabled"},
            "defaultValue": "false",
            "allowedValues": ["true","false"]
        },
        
        "internalLoadBalancingMode": {
            "type": "int",
            "defaultValue": 3,
            "allowedValues": [
                0,
                1,
                2,
                3
            ],
            "metadata": {
                "description": "0 = public VIP only, 1 = only ports 80/443 are mapped to ILB VIP, 2 = only FTP ports are mapped to ILB VIP, 3 = both ports 80/443 and FTP ports are mapped to an ILB VIP."
            }
        },
        "dnsSuffix": {
            "type": "string",
            "metadata": {
                "description": "Used when deploying an ILB enabled ASE.  Set this to the root domain associated with the ASE.  For example: contoso.com"
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources, such as templates and DSC modules, that the template depends on"
            },
            "defaultValue": "https://raw.githubusercontent.com/jftl6y/azure-ilb-ase-firewall/frb-war-room"
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            },
            "defaultValue": ""
        },
        "aseRebuildVNET": {
            "type": "string",
            "metadata": {"description":"Whether to rebuild the VNET (Yes) or not (No)"},
            "defaultValue": "Yes",
            "allowedValues": [
                "Yes",
                "No"
            ]
        },
        "sites_app1_name":{
            "type": "string",
            "metadata": {"description": "Name of the initial ASE App"}
        }
    },
    "variables": {
        "vnetID": "[resourceId(parameters('vnetResourceGroupName'), 'Microsoft.Network/virtualNetworks', parameters('vnetResourceName'))]",
        "serverfarms_ASE_asp_name" : "[concat(parameters('aseName'),'-appServicePlan')]"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "type": "Microsoft.Resources/deployments",
            "name": "BuildOrUpdateASENetworking",
            "resourceGroup": "[parameters('vnetResourceGroupName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/nestedtemplates/vnet.json', parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "vnetResourceName": {
                        "value": "[parameters('vnetResourceName')]"
                    },
                    "vnetAddressRange": {
                        "value": "[parameters('vnetAddressRange')]"
                    },
                    "subnetName": {
                        "value": "[parameters('aseSubnetName')]"
                    },
                    "aseSubnetAddressRange": {
                        "value": "[parameters('aseSubnetAddressRange')]"
                    },
                    "rebuildVNET":{
                        "value": "[parameters('aseRebuildVNET')]"
                    },
                    "azfwSubnetAddressRange" : {
                        "value" :"[parameters('azfwSubnetAddressRange')]"
                    },
                    "vnetResourceGroupName":{
                        "value":"[parameters('vnetResourceGroupName')]"
                    },
                    "aseName":{
                        "value":"[parameters('aseName')]"
                    },
                    "sqlManagedInstanceName":{
                        "value":"[parameters('sqlManagedInstanceName')]"
                    },
                    "sqlManagedInstance-subnet":{
                        "value":"[parameters('sqlManagedInstance-subnet')]"
                    },
                    "sqlManagedInstanceSubnetAddressRange":{
                        "value":"[parameters('sqlManagedInstanceSubnetAddressRange')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2015-08-01",
            "type": "Microsoft.Web/hostingEnvironments",
            "name": "[parameters('aseName')]",
            "location": "[parameters('location')]",
            "kind": "ASEV2",
            "tags": {
                "displayName" : "Deploy ASE"
            },
            "properties": {
                "name": "[parameters('aseName')]",
                "location": "[parameters('location')]",
                "ipSslAddressCount": 0,
                "internalLoadBalancingMode": "[parameters('internalLoadBalancingMode')]",
                "dnsSuffix": "[parameters('dnsSuffix')]",
                "virtualNetwork": {
                    "Id": "[variables('vnetID')]",
                    "Subnet": "[parameters('aseSubnetName')]"
                }
            },
            "dependsOn": [
                "Microsoft.Resources/deployments/BuildOrUpdateASENetworking"
            ]
        },
        {
            "type": "Microsoft.web/serverfarms",
            "tags": {"displayName":"Deploy App Service"},
            "sku": {
                "name": "I1",
                "tier": "Isolated"
            },
            "kind": "app",
            "name": "[variables('serverfarms_ASE_asp_name')]",
            "apiVersion": "2016-03-01",
            "location": "[parameters('location')]",
            "properties": {
                "name": "[variables('serverfarms_ASE_asp_name')]",
                "workerSize": "0",
                "workerSizeId": "0",
                "numberOfWorkers": "1",
                "reserved": false,
                "hostingEnvironment": "[parameters('aseName')]"
                },
            "dependsOn": [
                "[resourceId('Microsoft.Web/hostingEnvironments', parameters('aseName'))]"
            ]
        },
        {
            "type": "Microsoft.Web/sites",
            "tags": {"displayName":"Deploy Web App"},
            "kind": "app",
            "name": "[parameters('sites_app1_name')]",
            "apiVersion": "2016-08-01",
            "location": "West US 2",
            "scale": null,
            "properties": {
                "enabled": true,
                "hostNameSslStates": [
                    {
                        "name": "[concat(parameters('sites_app1_name'),parameters('dnsSuffix'))]",
                        "sslState": "Disabled",
                        "virtualIP": null,
                        "thumbprint": null,
                        "toUpdate": null,
                        "hostType": "Standard"
                    },
                    {
                        "name": "[concat(parameters('sites_app1_name'),'.scm.',parameters('dnsSuffix'))]",
                        "sslState": "Disabled",
                        "virtualIP": null,
                        "thumbprint": null,
                        "toUpdate": null,
                        "hostType": "Repository"
                    }
                ],
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('serverfarms_ASE_asp_name'))]",
                "reserved": false,
                "siteConfig": null,
                "scmSiteAlsoStopped": false,
                "hostingEnvironmentProfile": {
                    "id": "[resourceId('Microsoft.Web/hostingEnvironments', parameters('aseName'))]"
                },
                "clientAffinityEnabled": true,
                "clientCertEnabled": false,
                "hostNamesDisabled": false,
                "containerSize": 0,
                "dailyMemoryTimeQuota": 0,
                "cloningInfo": null,
                "httpsOnly": false
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('serverfarms_ASE_asp_name'))]",
                "[resourceId('Microsoft.Web/hostingEnvironments', parameters('aseName'))]"
            ]
        },
        {
            "type": "Microsoft.Sql/managedInstances",
            "tags": {"displayName":"Deploy Managed Instance"},
            "sku":{
                "name":"GP_Gen5",
                "tier" : "GeneralPurpose"
            },
            "name": "[parameters('sqlManagedInstanceName')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "identity":{"type": "SystemAssigned"},
            "properties":{
                "administratorLogin": "[parameters('sqlManagedInstanceAdminLogin')]",
                "administratorLoginPassword": "[parameters('sqlManagedInstancePassword')]",
                "subnetId": "[resourceId(parameters('vnetResourceGroupName'),'Microsoft.Network/virtualNetworks/subnets',parameters('vnetResourceName'),parameters('sqlManagedInstance-subnet'))]",
                "storageSizeInGB":"[parameters('sqlManagedInstance-storageSizeInGB')]",
                "vCores":"[parameters('sqlManagedInstance-vCores')]",
                "licenseType": "[parameters('sqlManagedInstance-licenseType')]",
                "hardwareFamily":"[parameters('sqlManagedInstance-hardwareFamily')]",
                "collation":"[parameters('sqlManagedInstance-collation')]",
                "publicDataEndpointEnabled":"[parameters('sqlManagedInstance-publicDataEndpointEnabled')]"
            }
        }
    ],
    "outputs": {}
}