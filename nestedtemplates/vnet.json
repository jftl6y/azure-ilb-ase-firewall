{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "East US",
            "allowedValues": [
                "Central US",
                "East US 2",
                "West US",
                "North Central US",
                "South Central US",
                "West Central US",
                "West US 2"
            ],
            "metadata": {
                "description": "Location for all resources"
            }
        },
        "vnetResourceName": {
            "type": "string",
            "metadata": {
                "description": "The name of the vnet"
            }
        },
        "vnetAddressRange": {
            "type": "string",
            "metadata": {
                "description": "Address range of the virtual network"
            }
        },
        "subnetName": {
            "type": "string",
            "metadata": {
                "description": "Subnet name that will contain the App Service Environment"
            }
        },
        "aseSubnetAddressRange": {
            "type": "string",
            "metadata": {
                "description": "Address range that will be used by the App Service Environment"
            }
        },
        "rebuildVNET": {
            "type": "string",
            "metadata": {"description":"Whether to rebuild the VNET (yes) or not (no)"},
            "defaultValue": "No"
        }
    },
    "variables": {
        "nsgName": "[concat(parameters('vnetResourceName'), '-', parameters('subnetName'), '-ase-mgmt-nsg')]",
        "nsgId": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', variables('nsgName'))]",
        "subnetRouteTableName":"[concat(parameters('subnetName'), '-routeTable')]"
    },
    "resources": [
        {
            "apiVersion": "2018-04-01",
            "type": "Microsoft.Network/networkSecurityGroups",
            "location": "[parameters('location')]",
            "name": "[variables('nsgName')]",
            "tags": {
                "displayName": "Deploy NSG"
            },
            "properties": {
                "securityRules": [
                    {
